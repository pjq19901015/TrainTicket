<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/query_train_page_bg">
    <include
            android:id="@+id/passenger_information_include_titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/titlebar"/>
    <Button
            android:id="@+id/passenger_information_btn_submit"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn_selector"
            android:text="@string/submit"
            android:textColor="@android:color/white"/>
    <ListView
            android:id="@+id/passenger_information_lvi"
            android:layout_below="@id/passenger_information_include_titlebar"
            android:layout_above="@id/passenger_information_btn_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</RelativeLayout>