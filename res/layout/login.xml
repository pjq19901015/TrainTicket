<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/train_list_bg">
    <include
            android:id="@+id/login_include"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/titlebar"/>

    <Button
            android:id="@+id/login_btn_novip_login"
            android:layout_below="@id/login_include"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/novip_login_btn_selector"
            android:text="非会员直接预订"
            android:textColor="@android:color/white"
            android:gravity="left|center_vertical"
            android:paddingLeft="15dp"/>
    <TextView
            android:id="@+id/login_txt"
            android:layout_below="@id/login_btn_novip_login"
            android:layout_alignLeft="@id/login_btn_novip_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="老用户登录"
            android:textColor="@android:color/black"/>
    <RelativeLayout
            android:id="@+id/login_relalayout_username"
            android:layout_below="@id/login_txt"
            android:layout_alignLeft="@id/login_btn_novip_login"
            android:layout_alignRight="@id/login_btn_novip_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/login_input_bg">
        <TextView
                android:id="@+id/login_txt_username"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textSize="17dp"
                android:text="@string/username"
                android:background="@drawable/login_input_txt_bg"/>
        <EditText
                android:id="@+id/login_edtTxt_username"
                android:layout_toRightOf="@id/login_txt_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="邮箱/手机"
                android:paddingLeft="10dp"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/login_relalayout_password"
            android:layout_below="@id/login_relalayout_username"
            android:layout_alignLeft="@id/login_btn_novip_login"
            android:layout_alignRight="@id/login_btn_novip_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_input_bg">
        <TextView
                android:id="@+id/login_txt_password"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textSize="17dp"
                android:text="@string/password"
                android:background="@drawable/login_input_txt_bg"/>
        <EditText
                android:id="@+id/login_edtTxt_password"
                android:layout_toRightOf="@id/login_txt_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="请输入密码"
                android:paddingLeft="10dp"/>
    </RelativeLayout>
    <Button
            android:id="@+id/login_btn_register"
            android:layout_below="@id/login_relalayout_password"
            android:layout_alignLeft="@id/login_btn_novip_login"
            android:layout_alignRight="@id/login_btn_novip_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/register_btn_selector"
            android:text="免费注册"
            android:textColor="@android:color/darker_gray"
            android:gravity="left|center_vertical"
            android:paddingLeft="15dp"/>
    <Button
            android:id="@+id/login_btn_login"
            android:layout_below="@id/login_btn_register"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_btn_selector"
            android:text="登录"
            android:textColor="@android:color/white"/>
</RelativeLayout>
