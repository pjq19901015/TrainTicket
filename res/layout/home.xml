<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/home_bg">
    <android.support.v4.view.ViewPager
            android:id="@+id/home_viewpage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_margin="10dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="10dp">
            <ImageView
                    android:id="@+id/home_imgview_query_train"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/query_train_bg"
                    android:src="@drawable/query_train"
                    android:layout_marginBottom="10dp"/>
            <ImageView
                    android:id="@+id/home_imgview_attention"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/attention_bg"
                    android:src="@drawable/attention"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
            <ImageView
                    android:id="@+id/home_imgview_query_highspeed_train"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/query_highspeed_train_bg"
                    android:src="@drawable/query_highspeed_train"/>
            <ImageView
                    android:id="@+id/home_imgview_order"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/order_bg"
                    android:src="@drawable/order"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>