<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/train_list_item_selector">
    <RelativeLayout
            android:id="@+id/train_list_item_relalayout_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true">
        <TextView
                android:id="@+id/train_list_item_txt_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:text="G101"/>
        <TextView
                android:id="@+id/train_list_item_txt_type"
                android:layout_below="@id/train_list_item_txt_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@android:color/black"
                android:text="高速动车"/>
    </RelativeLayout>

</RelativeLayout>