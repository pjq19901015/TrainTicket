<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="query_train_rdobtn">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">17dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="histroy_item_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="station_txt_input">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/arrow_selector</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="train_number_detail_txt_station">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginLeft">50dp</item>
    </style>

    <style name="station_list_item_txt" parent="train_number_detail_txt_station">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="order_center_radiobtn_date">
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/order_center_rdobtn_date_selector</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
    </style>
</resources>